<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear_main"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/img_header"
			android:focusable="false"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:src="@drawable/success_250px"
			android:scaleType="fitCenter"
			android:translationY="20.0dp"
			android:layout_gravity="center_horizontal"/>
		<LinearLayout
			android:id="@+id/linear_bg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="20dp"
			android:background="#FFFFFF"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical">
			<TextView
				android:id="@+id/txt_title"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="WhatsApp"
				android:textSize="30sp"
				android:textColor="#455A64"
				android:singleLine="true"/>
			<TextView
				android:id="@+id/txt_msg"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:layout_marginBottom="20dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="Approve sending message through WhatsApp."
				android:textSize="16sp"
				android:textColor="#546E7A"/>
			<LinearLayout
				android:id="@+id/linear_buttons"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<Button
					android:id="@+id/cancel_button"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:background="#9CD57C"
					android:text="Cancel"
					android:textSize="16sp"
					android:textColor="#FFFFFF"
					android:layout_weight="1"/>
				<LinearLayout
					android:id="@+id/linear_div"
					android:layout_width="20dp"
					android:layout_height="match_parent"
					android:orientation="vertical"/>
				<Button
					android:id="@+id/success_okay_button"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="45dp"
					android:background="#70C241"
					android:text="OK"
					android:textSize="16sp"
					android:textColor="#FFFFFF"
					android:layout_weight="1"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
